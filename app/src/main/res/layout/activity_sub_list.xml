<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@android:color/holo_red_dark">

            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:id="@+id/listName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TodoApplication"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/menuButton"
                android:layout_marginStart="8dp"/>

            <ImageButton
                android:id="@+id/filter_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:src="@drawable/baseline_filter_alt_24"
                android:background="?attr/selectableItemBackgroundBorderless"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20sp">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:iconifiedByDefault="false"
                android:queryHint="@string/search"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/filterSpinner"
                android:layout_width="178dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20sp"
                android:backgroundTint="@color/black"
                android:entries="@array/filter_options"
                android:textAlignment="center"
                android:visibility="gone" />

        </LinearLayout>

        <EditText
            android:id="@+id/todoEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:hint="@string/items" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0sp">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="16dp"
                android:drawableLeft="@drawable/baseline_add_24"
                android:text="@string/add"
                android:textSize="18dp" />

            <Spinner
                android:id="@+id/filterSpinnerPage"
                android:layout_width="76dp"
                android:layout_height="38dp"
                android:layout_marginStart="150sp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="150sp"
                android:backgroundTint="@color/black"
                android:entries="@array/page_options"
                android:visibility="gone"

                android:textAlignment="center" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <ImageButton
                android:id="@+id/sortAscendingButton"
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/sort_ascending_description"
                android:src="@drawable/baseline_sort_by_alpha_24" />

            <ImageButton
                android:id="@+id/sortDescendingButton"
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:layout_marginStart="150sp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="150sp"
                android:contentDescription="@string/sort_descending_description"
                android:src="@drawable/baseline_sort_by_alpha_24"
                android:textAlignment="center" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="436dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:gravity="top">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_marginStart="25dp">

            </TableLayout>

        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@android:color/holo_red_dark">

            <ImageButton
                android:id="@+id/prev_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:id="@+id/pageCount"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="131dp"
                android:layout_toStartOf="@+id/next_page"
                android:text="@string/pageNumber"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/next_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:src="@drawable/baseline_arrow_forward_ios_24"
                android:background="?attr/selectableItemBackgroundBorderless"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
